<h1>All Tags</h1>

<ul id="tags">
    <% @tag.each do |tag| %>
        <li>
            <%= link_to tag.name, tag_path(tag), 
            class: 'tag', id: "#{tag.name}" %>
            <%= link_to "delete", tag_path(tag), data: {confirm: "Really delete the tag?"}, method: :delete %>
        </li>
    <% end %>
</ul>